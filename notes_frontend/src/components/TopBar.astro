---
/**
 * Top bar with app title and new note button.
 */
---

<header class="sticky top-0 z-10 bg-surface/90 backdrop-blur border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 py-3 flex items-center justify-between">
    <div class="flex items-center gap-3">
      <div class="w-8 h-8 rounded-lg bg-blue-500/10 border border-blue-200 flex items-center justify-center">
        <span class="text-primary font-bold">N</span>
      </div>
      <h1 class="text-lg font-semibold text-text">Simple Notes</h1>
    </div>
    <div class="flex items-center gap-2">
      <button id="new-note-btn" class="o-btn-primary" aria-label="Create new note">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" class="inline-block">
          <path d="M12 5v14M5 12h14" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
        New
      </button>
    </div>
  </div>
</header>

<script>
  import { createNote } from "../lib/storage.ts";

  // Keyboard shortcuts
  function onKey(e) {
    const meta = e.metaKey || e.ctrlKey;
    if (meta && e.key.toLowerCase() === "n") {
      e.preventDefault();
      createNote();
    }
  }

  function init() {
    document.getElementById("new-note-btn")?.addEventListener("click", () => createNote());
    window.addEventListener("keydown", onKey);
  }

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", init);
  } else {
    init();
  }
</script>
